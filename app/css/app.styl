// All changes are detected and automatically compiled into CSS

@import 'helpers'

// Main

body, html
  height 100%
  font-family arial

body
  font normal 1em sans-serif
  vertical-gradient #eee, #fff
  text-align center
  background url("/images/bg.jpg")

a
  color blue

p
  padding 1px
  margin 0
  margin-bottom 0em

li
  border-bottom 1px solid white
  display block
  color #D7DF01
  font-weight bold

h1
  font-size 2em
  font-weight bold
  margin-bottom 1px
  color white
  // text-shadow 1px 1px 2px 'gray'

#content
  padding 50px

#header h1
  text-align left
  margin-top 20px
  margin-left 50px

#navbar
  float left
  width 10%
  padding 10px

#navbar li a
  color white
  display block
  width 15em
  margin-left 10px

#navbar li a:hover
  color #ff0
  background-color #0000c0

#map_canvas
  margin-left 0px
  border-left 1px solid gray
  overflow hidden
  width 100%
  height 100%
  clear both
